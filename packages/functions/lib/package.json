{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "clean": "node -e \"import('fs/promises').then(fs => fs.rm('./lib', { recursive: true, force: true })).catch(() => {})\"",
    "copy-package": "node -e \"import('fs/promises').then(fs => fs.copyFile('./package.json', './lib/package.json')).catch(() => {})\"",
    "build": "npm run clean && tsc && npm run copy-package",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulators:start": "npm run build && firebase emulators:start",
    "emulators:seed": "npm run build && cross-env NODE_OPTIONS=\"--require dotenv/config\" node lib/src/emulators/seedEmulator.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "src/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^13.1.0",
    "firebase-functions": "^6.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true,
  "type": "module"
}
