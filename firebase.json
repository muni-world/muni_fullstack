{
  "functions": {
    "source": "packages/functions",
    "ignore": [
      "node_modules",
      "**/node_modules/**",
      "**/.*",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local",
      ".env",
      "**/*.test.ts",
      ".runtimeconfig.json"
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "hosting": {
    "public": "packages/web/build",
    "ignore": [
      "node_modules",
      "**/node_modules/**",
      "**/.*",
      "firebase.json",
      "*.local",
      ".env"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
